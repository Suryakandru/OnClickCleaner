<body>
    <% if ( userFullName !=null && userCategory == 'Customer') { %>
        <div class="container text-center">
            <h6 hidden>User id: <%=username%></h6>
            <h2>Hello <%=userFullName%></h2><br>
            <div class="alert alert-warning text-center">
                <h6 style="color:brown"><%=notification%></h6>
            </div>
            <h2><a href="/bookService">Book a cleaning service now!</a></h2>
            <div><a href="/allBookings"><h3>your bookings</h3></a></div>
            <div><a href="/userProfile/<%= userId %>"><h3>User Profile</h3></a></div>
        </div>  
        <div class="text-center">
            <a href="/signout">Sign out</a>
        </div>  
        <% } 
        else if (userFullName !=null && userCategory == 'Cleaner'){ %>
            <div class="container text-center">
                <h2><a href="/availableBookings">Check out available cleaning tasks</a></h2>
                <h2><a href="/acceptedBookings">Currently accepted tasks</a></h2>
                <h2><a href="/allReviews">Customer Feedbacks</a></h2>
                <a href="/signout">Sign out</a>
            </div>            
        <% }
        else { %>
            <div >
                <div class="row">
                    <div class="col-8">
                        <p style="font-size:large;color:black">
                            <img src=".\Assets\images\banner.jpeg"/></p>     
                    </div>
                    <div class="col-4">
                        <h1>New to OnCLickCleaner? <a href="/signup">Signup</a></h1><p></p>
                        <h2>Already have an account? <a href="/signin">Signin</a></a></h2> 
                    </div>
                </div>
               
                 
            </div>            
        <% } %>       
